{
  "manifest_version": 3,
  "name": "NoSpoiler Plugin",
  "version": "v0.3-dev",
  "description": "Hide and protect from spoilers on Youtube, Twitter, Reddit, and more." ,
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }

  ],
  "background" : {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }

}