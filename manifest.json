{
  "manifest_version": 3,
  "name": "NoSpoiler Plugin",
  "version": "0.3",
  "version_name": "NoSpoiler â€“ v0.3-dev build",
  "description": "Hide and protect from spoilers on Youtube, Twitter, Reddit, and more.",
  "permissions": [
    "storage"

  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.reddit.com/*",
        "*://*.github.com/*"
      ],
      "js": [
        {
          "file": "content.js",
          "type": "module"
        }
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}