{
  "manifest_version": 3,
  "name": "NoSpoiler Plugin",
  "version": "0.3.1",
  "version_name": "NoSpoiler â€“ v0.3.1-dev build",
  "description": "Hide and protect from spoilers on Youtube, Twitter, Reddit, and more.",
  "permissions": [
    "storage"

  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.reddit.com/*",
        "*://*.github.com/*"
      ],
      "js": ["content.js"],


      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon.png"
  }
}